<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1) Send the site root to Laravel
    RewriteRule ^$ public/index.php [L]

    # 2) Let real files/dirs pass (prevents rewriting actual things like /public/favicon.ico)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 3) Everything else goes to Laravel front controller
    RewriteRule . /public/index.php [L]
</IfModule>
